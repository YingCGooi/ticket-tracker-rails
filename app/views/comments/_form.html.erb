<%= form_for [@ticket, @comment] do |f| %>
  <dl>
    <dt>
      <% if show_action? %>
        <%= f.label 'body', 'Add a comment' %>
      <% end %>
    </dt>
    <dd><%= f.text_area 'body', rows: 8 %></dd>

    <dt><%= label_tag 'status' %></dt>
    <dd><%= select_tag 'status', options_for_select(@statuses), include_blank: 'Do not change', class: 'width-1-3' %></dd>

    <%= f.submit %>
  </dl>
<% end %>