<% ticket = comment.ticket %>

<li class="well white-background">
  <div class="flex">
    <p><%= comment.body %></p>

    <nav>
      <% if logged_in? && same_as_current_user?(comment.user) %>
        <%= link_to edit_ticket_comment_path(ticket, comment) do %>
          <%= image_tag('edit-icon') %>
        <% end %>
        <%= link_to ticket_comment_path(ticket, comment), method: :delete do %>
          <%= image_tag('trash-icon') %>
        <% end %>
      <% end %>
    </nav>
  </div>
  
  <small>
    posted by <%= comment.user.name %>
    <%= time_ago_in_words(comment.created_at) %> ago
  </small>
</li>
