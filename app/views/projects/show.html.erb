<h1>
  <%= @project.name %><span></span>
  <%= link_to edit_project_path(@project) do %>
    <%= image_tag('edit-icon') %>
  <% end %>
  <%= link_to project_path(@project), method: :delete do %>
    <%= image_tag('trash-icon') %>
  <% end %>  
</h1>
<p>
  <%= @project.description %>
</p>

<section class="well">
  <h2>Tickets</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Assignee</th>
        <th>Status</th>
        <th>Tags</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tickets %>
    </tbody>
  </table>
</section>