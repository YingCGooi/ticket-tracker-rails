<div class="flex">
  <h1><%= @project.name %></h1>
    <%= link_to 'Edit', edit_project_path(@project), class: disable_if_logged_out %>
    <span></span>
    <%= link_to 'Delete', project_path(@project), method: :delete, class: disable_if_logged_out %>
</div>
<p>
  <%= @project.description %>
</p>

<hr/>
<h2>Tickets</h2>

<section class="well no-padding">
  <% if @tickets.present? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Assignee</th>
          <th>Status</th>
          <th>Tags</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tickets %>
      </tbody>
    </table>
  <% else %>
    <p>
      <em>There are no associated tickets to display. 
      Please
      <%= link_to 'create one here', new_ticket_path(project_id: @project.id) %>.</em>
  </p>
  <% end %>
</section>