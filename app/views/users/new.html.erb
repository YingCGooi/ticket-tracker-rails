<h1>Sign Up</h1>

<hr/>
<%= render 'shared/errors', obj: @user %>

<section class="well">
  <%= form_for @user do |f| %>
    <dl>
      <dt><%= f.label 'name', 'Username' %></dt>
      <dd><%= f.text_field 'name' %></dd>

      <dt><%= f.label 'email' %></dt>
      <dd><%= f.text_field 'email', placeholder: 'example@domain.com' %></dd>

      <dt><%= f.label 'password' %></dt>
      <dd><%= f.password_field 'password' %></dd>

      <dt><%= f.label 'password_confirmation' %></dt>
      <dd><%= f.password_field 'password_confirmation' %></dd>
    </dl>

    <hr/>
    <%= f.submit %>
  <% end %>
</section>